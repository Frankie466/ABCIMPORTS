{
  "version": 2,
  "builds": [
    {
      "src": "mysystem/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb", 
        "runtime": "python3.13"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"  
    },
    {
      "src": "/(.*)",
      "dest": "mysystem/wsgi.py"
    }
  ]
}
